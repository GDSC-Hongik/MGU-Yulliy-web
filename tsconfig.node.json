{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,

		// 절대경로
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
  },
  "include": ["vite.config.ts"]
}
